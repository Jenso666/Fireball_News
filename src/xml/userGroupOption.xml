<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/userGroupOption.xsd">
	<import>
		<categories>
			<!-- user -->
			<category name="user.fireball.news">
				<parent>user.fireball</parent>
			</category>

			<!-- mod -->
			<category name="mod.fireball.news">
				<parent>mod.fireball</parent>
			</category>

			<!-- admin -->
			<category name="admin.fireball.news">
				<parent>admin.fireball</parent>
			</category>
		</categories>

		<options>
			<!-- user -->
			<option name="user.fireball.news.canViewCategory">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.fireball.news.canViewNews">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.fireball.news.canViewDelayedNews">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
				<usersonly>1</usersonly>
			</option>
			<option name="user.fireball.news.canAddNews">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.fireball.news.canAddNewsWithoutModeration">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<moddefaultvalue>1</moddefaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>
			<option name="user.fireball.news.canStartPoll">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.fireball.news.canStartPublicPoll">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.fireball.news.canVotePoll">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.fireball.news.canAddComment">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.fireball.news.canDeleteComment">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<usersonly>1</usersonly>
			</option>
			<option name="user.fireball.news.canEditComment">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<usersonly>1</usersonly>
			</option>
			<option name="user.fireball.news.image.canUpload">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>0</admindefaultvalue>
				<usersonly>1</usersonly>
			</option>
			<option name="user.fireball.news.canUploadAttachment">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<enableoptions>
					user.fireball.news.image.allowedExtensions,user.fireball.news.attachmentMaxSize,user.fireball.news.allowedAttachmentExtensions,user.fireball.news.maxAttachmentCount
				</enableoptions>
				<options>module_attachment</options>
				<usersonly>1</usersonly>
			</option>
			<option name="user.fireball.news.attachmentMaxSize">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>fileSize</optiontype>
				<defaultvalue>1000000</defaultvalue>
				<options>module_attachment</options>
				<minvalue>10000</minvalue>
				<usersonly>1</usersonly>
			</option>
			<option name="user.fireball.news.allowedAttachmentExtensions">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>textarea</optiontype>
				<defaultvalue><![CDATA[gif
jpg
jpeg
png
bmp
zip
txt
pdf]]>
				</defaultvalue>
				<options>module_attachment</options>
				<wildcard><![CDATA[*]]></wildcard>>
				<usersonly>1</usersonly>
			</option>
			<option name="user.fireball.news.canDownloadAttachments">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>
			<option name="user.fireball.news.maxAttachmentCount">
				<categoryname>user.fireball.news</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>5</defaultvalue>>
				<usersonly>1</usersonly>
			</option>

			<!--mod -->
			<option name="mod.fireball.news.canModerateNews">
				<categoryname>mod.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
				<moddefaultvalue>1</moddefaultvalue>
			</option>
			<option name="mod.fireball.news.canModerateComment">
				<categoryname>mod.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
				<moddefaultvalue>1</moddefaultvalue>
			</option>
			<option name="mod.fireball.news.canEditComment">
				<categoryname>mod.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
				<moddefaultvalue>1</moddefaultvalue>
			</option>
			<option name="mod.fireball.news.canDeleteComment">
				<categoryname>mod.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
				<moddefaultvalue>1</moddefaultvalue>
			</option>

			<!-- admin -->
			<option name="admin.fireball.news.canManageCategory">
				<categoryname>admin.fireball.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>
		</options>
	</import>
	<delete>
		<options>
			<option name="user.fireball.news.image.allowedExtensions"/>
		</options>
	</delete>
</data>

<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/option.xsd">
	<import>
		<categories>
			<category name="fireball.news">
				<parent>fireball</parent>
			</category>
			<category name="fireball.news.images">
				<parent>fireball.news</parent>
			</category>
			<category name="fireball.news.categories">
				<parent>fireball.news</parent>
			</category>
		</categories>

		<options>
			<!-- fireball.news -->
			<option name="fireball_news_comments">
				<optiontype>boolean</optiontype>
				<categoryname>fireball.news</categoryname>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="fireball_news_view">
				<optiontype>select</optiontype>
				<categoryname>fireball.news</categoryname>
				<defaultvalue>article</defaultvalue>
				<selectoptions><![CDATA[article:cms.news.view.article
message:cms.news.view.message]]></selectoptions>
			</option>
			<option name="fireball_news_message_sidebar">
				<optiontype>boolean</optiontype>
				<categoryname>fireball.news</categoryname>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="fireball_news_news_images_attached">
				<optiontype>boolean</optiontype>
				<categoryname>fireball.news.images</categoryname>
				<defaultvalue>1</defaultvalue>
				<enableoptions>fireball_news_news_images_fullscreen</enableoptions>
			</option>
			<option name="fireball_news_news_images_fullscreen">
				<optiontype>boolean</optiontype>
				<categoryname>fireball.news.images</categoryname>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="fireball_news_sidebar_categories">
				<optiontype>boolean</optiontype>
				<categoryname>fireball.news.categories</categoryname>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="fireball_news_sidebar_categories_main">
				<optiontype>boolean</optiontype>
				<categoryname>fireball.news.categories</categoryname>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="fireball_news_languageicon">
				<optiontype>boolean</optiontype>
				<categoryname>fireball.news</categoryname>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="fireball_news_per_page">
				<optiontype>integer</optiontype>
				<categoryname>fireball.news</categoryname>
				<defaultvalue>10</defaultvalue>
			</option>
			<option name="fireball_news_truncate_preview">
				<optiontype>integer</optiontype>
				<categoryname>fireball.news</categoryname>
				<defaultvalue>500</defaultvalue>
			</option>
			<option name="fireball_news_latest_limit">
				<optiontype>integer</optiontype>
				<categoryname>fireball.news</categoryname>
				<defaultvalue>10</defaultvalue>
			</option>
			<option name="fireball_news_signatures">
				<optiontype>boolean</optiontype>
				<categoryname>fireball.news</categoryname>
				<defaultvalue>1</defaultvalue>
			</option>
			<!-- /fireball.news -->
		</options>
	</import>
</data>
